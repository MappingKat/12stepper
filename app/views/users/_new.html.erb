<%= form_for @user, url: users_path, method: :post do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this page from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="col-lg-4 col-md-2">
    <div class="actions" id="get-started">
      <%= link_to I18n.t("profile.get_started") %>
    </div>
    <div class="field">
      <%= f.text_field :username, :placeholder => I18n.t("profile.username") %>
    </div>
    <div class="field">
      <%= f.text_field :email, :placeholder => I18n.t("profile.email") %>
    </div>
    <div class="actions" id="sign-up">
      <%= f.submit I18n.t("profile.create_account") %>
    </div>
  </div>

  <div class="col-lg-4 col-md-2" id="right-login-column">
    <div class="field">
      <%= f.password_field :password, id: "new_password" %>
      <%= text_field_tag :new_fake_password, params[:new_fake_password], {:placeholder => I18n.t("profile.password")} %>
    </div>
    <div class="field">
      <%= text_field_tag :new_fake_password_confirmation, params[:new_fake_password_confirmation], {:placeholder => I18n.t("profile.password_confirmation")} %>
      <%= f.password_field :password_confirmation, id: "new_password_confirmation" %>
    </div>
    <div class="actions" id="sign-up-locale">
      <p><%= f.select :locale, [:en, :es, :fr] %></p>
    </div>
  </div>
<% end %>
