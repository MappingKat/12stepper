<%= form_for @user, url: users_path, method: :post do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this page from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="col-lg-4">
    <div class="field">
      <%= f.text_field :username, :placeholder => I18n.t("profile.username") %>
    </div>
    <div class="field">
      <%= f.text_field :email, :placeholder => I18n.t("profile.email") %>
    </div>
  </div>
  <div class="col-lg-4">
    <div class="field">
      <%= f.text_field :password, :placeholder => I18n.t("profile.password"), id: "new_fake_password" %><br>
      <%= f.password_field :password, id: "new_password" %>
    </div>
    <div class="field">
      <%= f.text_field :password_confirmation, :placeholder => I18n.t("profile.password_confirmation"), id: "new_fake_password_confirmation" %>
      <%= f.password_field :password_confirmation, id: "new_password_confirmation" %>
    </div>
    <div class="actions">
      <%= link_to I18n.t("profile.create_account") %>
    </div>
  </div>
<% end %>
