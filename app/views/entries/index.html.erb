<div class="row page-header">
    <div class="col-lg-7 col-md-7">
      <h1><%= t('entries.my_journal') %>
        <small><%= search_field 'entries_search', :meetings_search,  placeholder: t('meetings.search') %></small>
      </h1>
    </div>
    <div class="col-lg-5 col-md-5" id="entry-index-actions">
      <%= form_tag new_worksheet_entry_path, method: 'get' do %>
        <%= select_tag :step, "<option>1</option><option>2</option><option>3</option><option>4</option>".html_safe, id:'work-a-step' %>
        <%= submit_tag t("entries.work_step"), id:'worksheet-entry-submit' %> - 
      <% end %>
      <%= link_to t("entries.worksheet"), new_entry_path %> - 
      <%= link_to t("entries.write"), new_entry_path %>
    </div>
</div>
<hr />

<div id="entry-list-container">
  <% if @entries %>
    <%= render @entries %>
  <% else %>
    <p><%= t("entries.none") %></p>
  <% end %>
</div>
