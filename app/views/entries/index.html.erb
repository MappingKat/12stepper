
<% cache :entries_index do %>
  <div class="row page-header">
      <div class="col-lg-3 col-md-3 my-journal-container">
        <h1 id="my-journal"><%= link_to t('entries.my_journal'), entries_path %></h1>
      </div>
      <div class="col-lg-4 col-md-4">
        <%= search_field 'entries_search', :meetings_search,  placeholder: t('meetings.search'), id:'entries-search' %>
      </div>
      <div class="col-lg-3 col-md-3 col-lg-offset-2 col-md-offset-2" id="entry-index-actions">
        <%= link_to t("entries.work_step"), new_worksheet_entry_path, id: "work-a-step" %> 
        <%= link_to t("entries.write"), new_entry_path %>
      </div>
  </div>
<% end %>

<div id="entry-list-container">
  <% if @entries %>
    <%= render @entries %>
  <% else %>
    <p><%= t("entries.none") %></p>
  <% end %>
</div>
