<div class="entry-edit-container">
  <%= form_for @entry do |f| %>

    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.cktext_area :body, :class => 'ckeditor' %>

    <%= f.submit %>
    
  <% end %>

  <br />
  <br />
  <p class="new-entry-action">
    <%= link_to t('entries.create'), "#", :onclick=>"$('.new_entry').submit()", id:"entry-submit" %>
    <%= link_to t('entries.delete'), entries_path %>
    <%= link_to t('entries.share'), "#" %>
  </p>
  
</div>